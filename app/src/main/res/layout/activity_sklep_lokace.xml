<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Louka_lokace">

    <ImageView
        android:id="@+id/sklep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sklep_placeholder"
        tools:layout_editor_absoluteX="-124dp"
        tools:layout_editor_absoluteY="-16dp" />

    <ImageButton
        android:id="@+id/lupa_tlacitko"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/lupa" />

    <ImageButton
        android:id="@+id/batoh_tlacitko"
        android:layout_width="73dp"
        android:layout_height="78dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/batoh" />

    <ImageButton
        android:id="@+id/mec_tlacitko"
        android:layout_width="73dp"
        android:layout_height="76dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/batoh_tlacitko"
        app:layout_constraintStart_toEndOf="@+id/lupa_tlacitko"
        app:srcCompat="@drawable/nablizko" />

    <!-- Other UI elements go here -->

</androidx.constraintlayout.widget.ConstraintLayout>
